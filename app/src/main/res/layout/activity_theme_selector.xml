<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:divider="?attr/divider"
        android:showDividers="middle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/selectTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/themeSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/useGravity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/useGravity"
                android:onClick="onCheckboxClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/drawRollingDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/drawRollingDice"
                android:onClick="onCheckboxClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/useLegacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/useLegacy"
                android:onClick="onCheckboxClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </GridLayout>
        <GridLayout
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/graphicsAPIName"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/graphicsAPIName"
                android:text="@string/unknown"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="@string/graphicsAPIVersion"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/graphicsAPIVersion"
                android:text="@string/unknown"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="@string/graphicsDeviceName"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/graphicsDeviceName"
                android:text="@string/unknown"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>