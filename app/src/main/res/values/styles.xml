<resources>

    <attr name="round_button_clicked" format="reference"/>
    <attr name="round_button_unclicked" format="reference"/>
    <attr name="rounded_rectangle_clicked" format="reference"/>
    <attr name="rounded_rectangle_unclicked" format="reference"/>
    <attr name="divider" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Space" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/space</item>
        <item name="round_button_clicked">@drawable/planet2</item>
        <item name="round_button_unclicked">@drawable/planet1</item>
        <item name="rounded_rectangle_clicked">@drawable/nebula2</item>
        <item name="rounded_rectangle_unclicked">@drawable/nebula1</item>
        <item name="divider">@drawable/supernova</item>
    </style>

</resources>
