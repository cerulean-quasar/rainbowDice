<resources>

    <attr name="round_button_clicked" format="reference"/>
    <attr name="round_button_unclicked" format="reference"/>
    <attr name="rounded_rectangle_clicked" format="reference"/>
    <attr name="rounded_rectangle_unclicked" format="reference"/>
    <attr name="divider" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Space" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/space</item>
        <item name="round_button_clicked">@drawable/space_planet2</item>
        <item name="round_button_unclicked">@drawable/space_planet1</item>
        <item name="rounded_rectangle_clicked">@drawable/space_nebula2</item>
        <item name="rounded_rectangle_unclicked">@drawable/space_nebula1</item>
        <item name="divider">@drawable/space_supernova</item>
    </style>

    <style name="Sky" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#0000aa</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/sky</item>
        <item name="round_button_clicked">@drawable/sky_flower_butterfly</item>
        <item name="round_button_unclicked">@drawable/sky_flower</item>
        <item name="rounded_rectangle_clicked">@drawable/sky_butterfly_colorful</item>
        <item name="rounded_rectangle_unclicked">@drawable/sky_butterfly_yellow</item>
        <item name="divider">@drawable/sky_vine</item>
        <item name="android:textSize">17dp</item>
    </style>
</resources>
